datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Campaign {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  title       String?
  description String?
  goal        Float?
  owner       String?
  donations   Donation[]
}

model BankAccount {
  id                  String   @id @default(cuid())
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  stripeBankAccountId String?
  plaidBankAccountId  String?
  user                User?    @relation(fields: [userId], references: [id])
  userId              String?
}

model Donation {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  amount     Float?
  donor      String?
  campaign   Campaign? @relation(fields: [campaignId], references: [id])
  campaignId String?
}

model User {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  firstName    String?
  lastName     String?
  username     String        @unique
  email        String?       @unique
  password     String
  roles        Json
  bankAccounts BankAccount[]
}
